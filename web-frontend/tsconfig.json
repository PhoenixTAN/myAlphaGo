{
	"compilerOptions": {
		// Target latest version of ECMAScript.
		"target": "esnext",
		
		// Search under node_modules for non-relative imports.
		"moduleResolution": "node",
		
		"jsx": "react",
		"module": "commonjs",
		"baseUrl": "./src",
		"paths": {
			"@Components/*": ["components/*"],
			"@Containers/*": ["containers/*"],
			"@Assets/*": ["assets/*"],
			"@Constants/*": ["constants/*"]
		}
	},
	"include": [
		"src", "typings"
	]
}
